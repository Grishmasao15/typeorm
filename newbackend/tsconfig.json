{   
   
   "compileOnSave": false,
   "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "es2017",
      "outDir": "dist",
      "baseUrl": "./src,",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
         "@types",
         "node_modules/@types"
      ],
      "types": [
         "node"
      ]
   },
   "exclude": [
      "node_modules"
   ]
}