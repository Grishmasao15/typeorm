{
   "compileOnSave": false,
   "compilerOptions": {
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "es6",
      "outDir": "dist",
      "rootDir": "./src",
      "baseUrl": "../src",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
         "@types",
         "node_modules/@types"
      ],
   },
   "exclude": [
      "node_modules"
   ]
}